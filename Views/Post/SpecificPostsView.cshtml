@model List<WebApiHash.Models.Post>
<html>
<body>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



    <br /><br><br>
    <div class="container">
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                Źródła newsów
            </button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                @foreach (var item in @ViewBag.data)
                {
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@item</a></li>
                }
            </ul>
        </div>


        <br />
        Hashtag:
        <input class="form-control" id="hashtag" />
        <button onclick="openurl()">Klik klik beng</button>



        <script>
            $("#hashtag").autocomplete({
                source: '@Url.Action("Search","Post")'
            });

            function openurl() {
                var url = document.getElementById('hashtag').value;
                window.location.replace("http://localhost:50707/post/specificpostsview?hashtagname=" + url);

            }
            var url2 = document.getElementById('hashtag').value;
           setInterval(function () { $('#_recentfive').load('SpecificPostsView'); }, 3000); // every 3 sec
        </script>
        <Div id="_recentfive">
            @{Html.Partial("_Partial", Model);}
            </Div>
        </Div>
</body>
</html>
