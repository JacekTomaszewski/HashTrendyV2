@model List<WebApiHash.Models.Post>
<html>
<body>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



    <br /><br><br>
        <div class="container">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                    Źródła newsów
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                    @foreach (var item in @ViewBag.data)
                    {
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">@item</a></li>
                    }
                </ul>
            </div>
        </div>
   
    <br />
    Hashtag:
    <input class="form-control" id="hashtag"/>
    <button onclick="openurl()">Klik klik beng</button>



        <script>
$("#hashtag").autocomplete({
        source: '@Url.Action("Search","Post")'
    });

        function openurl()
        {
            var url = document.getElementById('hashtag').value;
            window.location.replace("/post/specificpostsview?hashtagname=" + url);
        }
        </script>
        @foreach (var item in Model.OrderByDescending(item => item.Date))
        {
            if (Model != null)
            {
                <h1><img src="@item.Avatar" /> @item.Username</h1>
                <h5>  @item.Date</h5>
                <a href="@item.DirectLinkToStatus">Przejdź do strony</a>
                <br />
                <h3>@item.DirectLinkToStatus</h3>
                <h2><img src="@item.ContentImageUrl" class="img-responsive" /></h2>
                <h3>
                    <span style="width:100%;word-wrap:break-word;display:inline-block;">
                        @Html.Raw(@item.ContentDescription)
                    </span>
                </h3>
                <h3> Via:<b> @item.PostSource </b></h3>
            }
            <hr />

        }
</body>
</html>
